<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.detail.DetailFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ch_img"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toTopOf="@id/ch_occupation"
        app:layout_constraintEnd_toStartOf="@id/ch_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/abc_vector_test" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ch_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/ch_img"
        app:layout_constraintEnd_toStartOf="@+id/ch_favorite"
        app:layout_constraintStart_toEndOf="@id/ch_img"
        app:layout_constraintTop_toTopOf="@id/ch_img"
        tools:text="@string/character_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ch_favorite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ch_name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ch_occupation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/occupation"
        app:layout_constraintBottom_toTopOf="@id/ch_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ch_img" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ch_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/status"
        app:layout_constraintBottom_toTopOf="@id/ch_portrayed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ch_occupation" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ch_portrayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/portrayed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ch_status" />


</androidx.constraintlayout.widget.ConstraintLayout>